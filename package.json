{
  "name": "final-competetion",
  "version": "1.0.1",
  "description": "An interactive competition application",
  "main": "main.js",
  "targets": {
    "main": false
  },
  "scripts": {
    "start": "electron .",
    "build": "parcel build index.html --public-url ./",
    "css:watch": "tailwindcss -i ./input.css -o ./output.css --watch",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.example.final-competetion",
    "publish": [
      {
        "provider": "github",
        "owner": "ibraheemalani2",
        "repo": "final-competition"
      }
    ],
    "productName": "المسابقة النهائية",
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "final-competetion-setup-${version}.${ext}"
    }
  },
  "keywords": [],
  "author": "User",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "parcel": "^2.16.4",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@babel/standalone": "^7.29.0",
    "@fontsource/amiri": "^5.2.8",
    "@fontsource/cairo": "^5.2.7",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "canvas-confetti": "^1.9.4",
    "electron-updater": "^6.7.3",
    "firebase": "^12.8.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}